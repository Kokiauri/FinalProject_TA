<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Automation Suite" parallel="methods" thread-count="3">

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="UI Tests">
        <classes>
            <class name="org.example.ui.AuthTests"/>
            <class name="org.example.ui.ContactFormTest"/>
            <class name="org.example.ui.TestCasesPageTest"/>
            <class name="org.example.ui.ProductsTests"/>
            <class name="org.example.ui.SubscriptionTests"/>
        </classes>
    </test>

    <test name="API Tests">
        <classes>
            <class name="org.example.api.ProductsApiTests"/>
            <class name="org.example.api.BrandsApiTests"/>
            <class name="org.example.api.AuthApiTests"/>
        </classes>
    </test>

</suite>